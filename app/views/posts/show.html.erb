<div class="container-fluid mx-auto md:px-10">
  <div class="mb-12">
    <h1 class="sm:px-6 md:px-0 text-center font-bold" id="title-mobile" style="line-height: 1.3;"><%= @post.title %></h1>
    <p class="mt-2 text-center text-grey-darker" style="font-size: 18px;"><%= @post.local %>, <%= @post.date.strftime("%d.%m.%Y") %></p>
  </div>

  <% if @post.image_primary.attached? %>
    <%= image_tag(@post.image_helper(@post.image_primary, "post", @scale.to_i, 558)) %>
  <% end %>

  <div class="mb-16 sm:px-6">
    <p class="mt-4 text-center text-grey-darker italic"><%= @post.image_description %></p>

    <div class="sm:w-full md:w-2/3 my-8 mx-auto">
      <p class="text-lg text-grey-darkest leading-loose">
        <%= @post.content %>
      </p>
    </div>
  </div>
  <% if @post.image_two.attached? %>
    <%= image_tag(@post.image_helper(@post.image_two, "post", @scale.to_i, 558)) %>
  <% end %>

  <p class="mt-4 mb-8 text-center text-grey-darker italic"><%= @post.subtitle_two %></p>

  <% if @post.image_three.attached? %>
    <%= image_tag(@post.image_helper(@post.image_three, "post", @scale.to_i, 558)) %>
  <% end %>

  <p class="mt-4 mb-8 text-center text-grey-darker italic"><%= @post.subtitle_three %></p>

  <% if @post.image_four.attached? %>
    <%= image_tag(@post.image_helper(@post.image_four, "post", @scale.to_i, 558)) %>
  <% end %>

  <p class="mt-4 mb-8 text-center text-grey-darker italic"><%= @post.subtitle_four %></p>

  <% if @post.image_five.attached? %>
    <%= image_tag(@post.image_helper(@post.image_five, "post", @scale.to_i, 558)) %>
  <% end %>

  <p class="mt-4 mb-8 text-center text-grey-darker italic"><%= @post.subtitle_five %></p>

  <% if admin_signed_in? %>
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
  <% end %>
  
</div>
<p id="notice"><%= notice %></p>

<% if @post.image_primary.attached? %>
<p>
  <strong>Image primary:</strong>
  <%= image_tag @post.image_primary %>
</p>
<% end %>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Date:</strong>
  <%= @post.date %>
</p>

<p>
  <strong>Local:</strong>
  <%= @post.local %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |

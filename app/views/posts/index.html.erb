<div class="container mx-auto sm:px-2 md:px-6">
  <% @posts.each do |post| %>
  <!-- POST -->
  <div class="mt-12 mx-4">
    <div class="post-thumbnail w-full h-64 mb-2 bg-grey-lighter">
      <%= image_tag post.image_primary %>
    </div>
    <div class="flex mt-2 mb-6">
      <div class="block w-2/3">
        <div class="inline-block w-6 h-1 bg-logo-cyan"></div>
        <div class="inline-block w-6 h-1 bg-logo-orange"></div>
        <h1 class="mt-1 text-4xl font-medium">
          <%= link_to post do %>
            <%= post.title %>
          <% end %>
        </h1>
      </div>
      <div class="block w-1/3 text-right">
        <p class="text-right mt-1">
          <i class="fas fa-map-marker-alt text-grey mr-1"></i><%= post.local %> <i class="far fa-clock text-grey ml-2 mr-1"></i><%= post.date %>
        </p>
      </div>
    </div>
  </div>
  <% end %>
</div>

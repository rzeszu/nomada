<%= form_for @product, url: product_images_path(@product.id), method: :post do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="mb-3">
  <label class="block text-sm font-normal mb-1">
    Nazwa
  </label>
  <%= form.text_field :name, class: "border border-grey-light bg-white text-black inline-block w-full rounded py-3 px-4" %>
</div>

<div class="flex mb-3">
  <div class="inline-flex items-center">
    <div class="flex-1 field mr-6">
      <label class="block text-sm font-normal mb-1">
        Cena
      </label>
      <%= form.number_field :price, class: "border border-grey-light bg-white text-black inline-block w-full rounded py-3 px-4" %>
    </div>
    <div class="flex-1 field mr-6">
      <label class="block text-sm font-normal mb-1">
        Ilość w magazynie
      </label>
      <%= form.number_field :quantity, class: "border border-grey-light bg-white text-black inline-block w-full rounded py-3 px-4" %>
    </div>
    <div class="flex-1 field mt-4">
      <%= form.check_box :available, id: :product_available %>
      <label>
        Dostępne
      </label>
    </div>
  </div>
</div>

<div class="flex mb-3">
  <div class="flex-1 field mr-6">
    <label class="block text-sm font-normal mb-1">
      Kategoria
    </label>
    <%= form.select :category, Category.all.pluck(:name, :id), {}, { multiple: true, class: "w-full categories" } %>
  </div>
  <div class="flex-1 field mr-6">
    <label class="block text-sm font-normal mb-1">
      Skąd?
    </label>
    <%= form.collection_select(:where_from, WhereFrom.order("name ASC"), :id, :name, {:include_blank => ''}, { class: 'w-full skad' }) %>
  </div>
  <div class="flex-1 field">
    <label class="block text-sm font-normal mb-1">
      Materiały
    </label>
    <%= form.select :material, Material.all.pluck(:name, :id), {}, { multiple: true, class: "w-full materials" } %>
  </div>
</div>

  <div class="field mb-3">
    <label class="block text-sm font-normal mb-1">
      Opis
    </label>
    <%= form.text_area :description, rows: "10", id: :product_description, class: "border border-grey-light bg-white text-black inline-block w-full rounded py-3 px-4" %>
  </div>

<div class="flex mb-3">
  <div class="flex-1 field mr-6">
    <label class="block text-sm font-normal mb-1">
      Kolor
    </label>
    <%= form.select :color, Color.all.pluck(:name, :id), {}, { multiple: true, class: "w-full colors" } %>
  </div>
  <div class="flex-1 field">
    <label class="block text-sm font-normal mb-1">
      Jak dbać?
    </label>
    <%= form.collection_select(:care, WhereFrom.order("name ASC"), :id, :name, {:include_blank => ''}, { class: 'w-full skad' }) %>
  </div>
</div>

  <div class="field">
    <% if product.images.present? %>
      <% product.images.each_with_index do |image, index| %>
        <%= image_tag image.url, class: "w-64" %>
        <% @path = index %>
        <%= link_to "Usuń", product_image_path(product.id, index), :method => :delete, data: { confirm: "Na pewno?" }, class: "bg-red-light text-white px-2 py-1 text-sm" %>
      <% end %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :images, multiple: true %>
  </div>

  <div class="actions">
    <%= form.submit "Zapisz", class: "btn bg-green-light my-4 px-4 py-3 text-white hover:bg-green hover:text-white cursor-pointer" %>
  </div>
<% end %>

<% if notice %>
<div class="flex">
  <p class="w-full mt-6 p-6 bg-green-lightest" id="notice">
    <%= notice %>
  </p>
</div>
<% end %>

<div class="flex my-6">
  <div class="flex-1 p-4">
    <% if @product.images[0].present? %>
    <%= image_tag @product.images[0].url %>
    <% end %>
  </div>
  <div class="flex-1 p-4">
    <h1 class="text-2xl mb-1 font-normal">
      <%= @product.name %>
    </h1>

    <p>
      <%= @product.price %> zł
    </p>

    <%= simple_format(@product.description, class: "my-3 py-5 border-t border-b") %>

    <% if @product.where_from.present? %>
    <p class="py-1 text-sm">
      <span class="uppercase">Skąd?</span>
      <br/>
      <%= WhereFrom.find(@product.where_from).name %>
    </p>
    <% end %>

    <% if @product.material.present? %>
    <p class="py-1 text-sm">
      <span class="uppercase">Materiał</span>
      <br/>
      <% @product.material.each do |material| %>
        <% if material != @product.material.last %>
          <%= Material.find(material).name %>, 
        <% else %>
          <%= Material.find(material).name %>
        <% end %>
      <% end %>
    </p>
    <% end %>

    <% if @product.color.present? %>
    <p class="py-1 text-sm">
      <span class="uppercase">Kolor</span>
      <br/>
      <% @product.color.each do |color| %>
        <% if color != @product.color.last %>
          <%= Color.find(color).name %>, 
        <% else %>
          <%= Color.find(color).name %>
        <% end %>
      <% end %>
    </p>
    <% end %>

    <% if @product.care %>
    <p class="py-1 pb-1 text-sm">
      <span class="uppercase">JAK DBAĆ?</span>
      <br/>
      <%= @product.care %>
    </p>
    <% end %>
    
    <div class="mt-8">
      <a href="#" class="btn bg-green-light my-4 px-4 py-3 text-white hover:bg-green hover:text-white">
        Dodaj do koszyka
      </a>
      <%= link_to 'Edytuj', edit_product_path(@product), class: "bg-grey-lighter ml-2 px-4 py-3 hover:bg-grey-light" %>
    </div>

    <%# TAGI -%>
    <div class="mt-8 w-2/3">
      <% if @product.category.present? %>
        <% @product.category.each do |f| %>
          <div class="inline-block px-3 py-2 bg-grey-lighter text-sm mr-1 mb-2">
            <%= Category.find(f).name %>
          </div>
        <% end %>
      <% end %>
      <% if @product.where_from.present? %>
        <div class="inline-block px-3 py-2 bg-grey-lighter text-sm mr-1 mb-2">
          <%= WhereFrom.find(@product.where_from).name %>
        </div>
      <% end %>
      <% if @product.material.present? %>
        <% @product.material.each do |f| %>
          <div class="inline-block px-3 py-2 bg-grey-lighter text-sm mr-1 mb-2">
            <%= Material.find(f).name %>
          </div>
        <% end %>
      <% end %>
      <% if @product.color.present? %>
        <% @product.color.each do |f| %>
          <div class="inline-block px-3 py-2 bg-grey-lighter text-sm mr-1 mb-2">
            <%= Color.find(f).name %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
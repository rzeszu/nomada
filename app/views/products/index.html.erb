<div class="container mx-auto sm:px-2 md:px-6">
  <!-- NAPIS -->
  <div class="my-6 mx-4 text-center">
    <h1 class="block text-3xl mb-6 font-normal text-center">
      Wszystkie
      <% if params[:show].to_i == 0 %>produkty<% end %>
      <% if params[:show].to_i == 1 %>ciuchy<% end %>
      <% if params[:show].to_i == 2 %>konopne<% end %>
      <% if params[:show].to_i == 3 %>kadzidła<% end %>
      <% if params[:show].to_i == 4 %>akcesoria<% end %>
    </h1>
    <p class="block leading-normal">
      Coś tam opisujące, jak to świetnie jest zrobić zakupsy wspierając Fair Trade.<br/>
      To zdecydowanie przekona wielu ludzików.
    </p>
  </div>
  <!-- TAGI -->
  <div class="flex flex-wrap mt-8 sm:mb-6 md:mb-10 mx-4 justify-center">
    <%= link_to products_path, class: active(0) + "inline-block px-4 py-3 mx-1 mb-2 hover:bg-grey-light" do %>
      Wszystkie
    <% end %>
    <%= link_to products_path(show: '1'), class: active(1) + "inline-block px-4 py-3 mx-1 mb-2 hover:bg-grey-light" do %>
      Ciuchy
    <% end %>
    <%= link_to products_path(show: '3'), class: active(3) +  "inline-block px-4 py-3 mx-1 mb-2 hover:bg-grey-light" do %>
      Kadzidła
    <% end %>
    <%= link_to products_path(show: '2'), class: active(2) +  "inline-block px-4 py-3 mx-1 mb-2 hover:bg-grey-light" do %>
      Konopne
    <% end %>
    <%= link_to products_path(show: '4'), class: active(4) +  "inline-block px-4 py-3 mx-1 mb-2 hover:bg-grey-light" do %>
      Akcesoria
    <% end %>
  </div>
  <div class="flex flex-wrap" id="products">
    <% @products.each do |product| %>
      <% if admin_signed_in? %>
        <div class="w-full border px-4 py-3 mb-2">
          <%= product.name %>
        </div>
      <% else %>
        <div class="sm:w-full md:w-1/2 lg:w-1/3 px-3 pb-6">
          <div class="boxy">
          <% if product.file.attached? %>
            <%= link_to product_path(product.id) do %>
              <% if product.available == true %>
                <%= image_tag product.file, class: "blurred" %>
              <% else %>
                <%= image_tag product.file, class: "blurred grey" %>
              <% end %>
            <% end %>
          <% end %>
          </div>
          <p class="text-center pt-4 pb-2 text-xl">
            <%= link_to product_path(product.id) do %>
              <%= product.name %>
            <% end %>
          </p>
          <p class="text-center text-lg font-normal">
            <%= product.price %> ZŁ
          </p>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= will_paginate @products %>
  <div class="sm:hidden">

  <h1>Products</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Where from</th>
        <th>Material</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Category</th>
        <th>Care</th>
        <th>Available</th>
        <th>Color</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= product.where_from %></td>
          <td><%= product.material %></td>
          <td><%= product.description %></td>
          <td><%= product.quantity %></td>
          <td><%= product.category %></td>
          <td><%= product.care %></td>
          <td><%= product.available %></td>
          <td><%= product.color %></td>
          <td><%= link_to 'Show', product %></td>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Ar ju siur?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Product', new_product_path %>

  </div>
</div>
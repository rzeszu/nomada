<div class="flex my-6 mx-4">
  <h1 class="text-2xl mb-1 font-normal">
    Wszystkie produkty
  </h1>
</div>
  <div class="flex flex-wrap">
    <% @products.each do |product| %>
    <div class="w-1/3 px-4 pb-6">
      <div class="boxy">
      <% if product.images.present? %>
      <%= link_to product_path(product.id), class: "bg-red" do %>
        <%= image_tag product.images[0].url, class: "blurred" %>
      <% end %>
      <% end %>
      </div>
      <br/>
      <p class="text-center pt-4 pb-2 text-xl">
        <%= link_to product_path(product.id) do %>
          <%= product.name %>
        <% end %>
      </p>
      <p class="text-center text-lg font-normal">
        <%= product.price %> Z≈Å
      </p>
    </div>
    <% end %>
</div>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Where from</th>
      <th>Material</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Category</th>
      <th>Care</th>
      <th>Available</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.where_from %></td>
        <td><%= product.material %></td>
        <td><%= product.description %></td>
        <td><%= product.quantity %></td>
        <td><%= product.category %></td>
        <td><%= product.care %></td>
        <td><%= product.available %></td>
        <td><%= product.color %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Ar ju siur?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


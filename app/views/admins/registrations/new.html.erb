<div class="container mx-auto sm:px-6 sm:py-6 md:px-16 md:py-10">
  <div class="px-4">


    <h2 class="text-3xl mb-4 font-medium">Rejestracja</h2>

    <p class="mb-4 text-sm text-grey-dark">
      Tylko kozaki mogą zobaczyć tę stronę.<br/>Pozostali sajonara.
    </p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field mb-3">
        <label class="block text-sm mb-2">
          E-mail
        </label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-grey-light bg-white text-black inline-block sm:w-full md:w-1/2 lg:w-1/3 rounded py-3 px-4" %>
      </div>

      <div class="field mb-3">
        <label class="block text-sm">
          Hasło
        </label>
        <% if @minimum_password_length %>
        <em class="block text-sm mb-2">(<%= @minimum_password_length %> znaków minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "border border-grey-light bg-white text-black inline-block sm:w-full md:w-1/2 lg:w-1/3 rounded py-3 px-4" %>
      </div>

      <div class="field">
        <label class="block text-sm mb-2">
          Potwierdź hasło
        </label>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border border-grey-light bg-white text-black inline-block sm:w-full md:w-1/2 lg:w-1/3 rounded py-3 px-4" %>
      </div>

      <div class="actions">
        <%= f.submit "Rejestruj", class: "bg-green-light my-4 px-4 py-3 text-white font-medium hover:bg-green hover:text-white cursor-pointer" %>
      </div>
    <% end %>

    <%= render "admins/shared/links" %>
  </div>
</div>

<!DOCTYPE html>
<html>
  <head>
    <title>Skep</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'fontawesome', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
    <%= stylesheet_pack_tag 'application' %>
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Merriweather:400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Raleway:300,400,500,600,700,800" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
  </head>
  <body class="font-body leading-tight">
    <!-- PANEL ADMINA -->
    <% if admin_signed_in? %>
    <div class="sm:hidden md:block border-b bg-grey-lightest">
      <div class="flex container mx-auto text-center py-4 font-normal md:justify-center">
        <div class="w-1/6 text-left sm:hidden"></div>
        <div class="sm:w-full md:w-2/3 self-center text-center">
          <%= link_to new_product_path, class: "inline-block px-3 py-2 mx-1 text-sm text-white bg-green rounded hover:text-white hover:bg-green-light" do %>
            <i class="fas fa-plus"></i>
          <% end %>
          <%= link_to new_post_path, class: "inline-block px-3 py-2 mx-1 text-sm text-white bg-green-dark rounded hover:text-white hover:bg-green-light" do %>
            <i class="fas fa-plus"></i>
          <% end %>
          <a href="#" class="inline-block px-3 py-2 mx-1 text-sm text-white bg-blue rounded hover:text-white hover:bg-blue-light">
            <i class="fas fa-clipboard-list"></i>
          </a>
          <%= link_to manage_index_path, class: "inline-block px-3 py-2 mx-1 text-sm text-white bg-pink rounded hover:text-white hover:bg-pink-light" do %>
            <i class="fas fa-book"></i>
          <% end %>
          <%= link_to destroy_admin_session_path, method: :delete, class: "inline-block px-3 py-2 mx-1 text-sm text-white bg-red rounded md:mt-0 hover:text-white hover:bg-red-light" do %>
            <i class="fas fa-sign-out-alt"></i>
          <% end %>
        </div>
        <div class="w-1/6 text-right sm:hidden"></div>
      </div>
    </div>
    <% end %>
    <!-- MENU -->
    <header class="flex flex-row my-8 sm:px-6 md:px-10 items-center justify-center">
      <div class="w-1/3 block"><%= image_tag "menu.png", class: "w-6 menu-open" %></div>
      <div class="w-1/3 block text-center">
        <%= link_to root_path do %>
          <%= image_tag "aura.jpg", srcset: { "aura-2x.jpg" => "2x" }, class: "md:mx-12 text-center" %>
        <% end %>
      </div>
      <div class="w-1/3 block"></div>
    </header>
    <!-- MOBILE MENU -->
    <div class="menu-mobile block fixed pin-y" style="display: none;">
      <div class="flex h-full content-center">
        <div class="self-center">
          <p class="mb-3">Blog</p>
          <p class="mb-3">Sklep</p>
          <p class="mb-3">Jurta</p>
          <p class="mb-3">O nas</p>
          <p>Kontakt</p>
        </div>
      </div>
      
      <% if admin_signed_in? %>
        <div class="py-5 pl-12 border-b text-xl font-medium">
          <p class="mb-3">
            <%= link_to new_product_path do %>
              <i class="fas fa-plus text-lg mr-2"></i>Dodaj produkt
            <% end %>
          </p>
          <p class="mb-3">
            <%= link_to manage_index_path do %>
              <i class="fas fa-sliders-h text-lg mr-2"></i>ZarzÄ…dzaj
            <% end %>
          </p>
          <p>
            <%= link_to destroy_admin_session_path, method: :delete do %>
              <i class="fas fa-sign-out-alt text-lg mr-2"></i>Wyloguj
            <% end %>
          </p>
        </div>
      <% end %>
    </div>

    <!-- POWIADOMIENIA -->
    <% if notice %>
    <div class="flex fixed pin-t pin-l w-full z-50 bg-green-lightest" id="noticed">
      <div class="container mx-auto p-6 rounded">
        <p class="w-full font-medium" id="notice">
          <i class="fas fa-check mr-2 text-green"></i><%= notice %>
        </p>
      </div>
    </div>
    <% end %>

    <%= yield %>

    <!-- FOOTER -->
    <div class="lg:hidden flex flex-col mt-6 py-6 bg-grey-lightest border-t items-center justify-center text-xl">
      <div class="block text-2xl text-grey-dark mb-4">
        <i class="fas fa-arrow-up"></i>
      </div>
      <div class="block mb-2 text-grey-darker">Blog</div>
      <div class="block mb-2 text-grey-darker font-medium">Sklep</div>
      <div class="block text-grey-darker">Kontakt</div>
      <div class="block mt-4 text-3xl text-grey-dark">
        <i class="fab fa-facebook-square mr-1 text-blue-dark"></i>
        <i class="fab fa-instagram text-pink-dark"></i>
      </div>
      <div class="block mt-4 text-sm text-grey-darker">
        <i class="far fa-copyright mr-1 text-xs"></i>2019 Aura Good
      </div>
    </div>

  </body>
</html>
